<%= javascript_include_tag 'jquery.raty.js', "data-turbolinks-track": false %>

<div class="card" style="background-color: ivory;">
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.image.url(:medium), class: "img-fluid shadow-lg mb-5 bg-white rounded"%>
        <div class="table-responsive">
          <table class="table">
            <tr>
              <td><strong>Title:</strong></td>
              <td><%= @movie.title %></td>
            </tr>
            <tr>
              <td><strong>Description:</strong></td>
              <td><%= @movie.description %></td>
            </tr>
            <tr>
              <td><strong>Movie length:</strong></td>
              <td><%= @movie.movie_length %></td>
            </tr>
            <tr>
              <td><strong>Director:</strong></td>
              <td><%= @movie.director %></td>
            </tr>
            <tr>
              <td><strong>Rating:</strong></td>
              <td><%= @movie.rating %></td>
            </tr>
          </table>
          <%= link_to "Write A Review",  new_movie_review_path(@movie) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%=@movie.title%></h1>
        <p><%= @movie.description %></p>
        <% if @reviews.blank? %>
          <h3>No reviews yet, would yoou like to be the first one to add yours!</h3>
          <%= link_to "Write A Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="reviews">
              <div class="star-rating" data-score= <%= review.rating %> ></div>
              <p><%= review.comment %></p>
            </div>
              
      </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

<!-- this script calls raty function from raty.js file on div with class star-rating --> 
<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>